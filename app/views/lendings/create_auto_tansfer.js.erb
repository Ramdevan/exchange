<% if @at.errors.any? %>
	$('.error_messages').removeClass("hide")
  $('.error_messages').html( "<%= @at.errors.full_messages.first %>");
<% else %>
	$(".auto_transfer_<%= @at.lending_id %>").prop("checked", true);
	$('.success_messages').removeClass("hide")
	$(".success_messages").html("Success")
	setTimeout(function(){
		$('.error_messages').addClass("hide")
		$('.success_messages').addClass("hide")
  	$("#autoTransferModal").modal('hide');
  	location.reload();
	},1000);
<% end %>
