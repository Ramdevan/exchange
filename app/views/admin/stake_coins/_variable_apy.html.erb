<div class="stack_coin_variable_apy form-row align-items-center">
    <%= t.hidden_field :_destroy %>
    <div class="form-group col-lg-12 col-md-12">
        <% t.hidden_field :id %>
    </div>
    <div class="form-group col-lg-4 col-md-4">
        <%= t.label :lot_size %>
        <%= t.number_field :lot_size, step: :any, required: true, min: 1, class:'form-control' %>
    </div>
    <div class="form-group col-lg-4 col-md-4">
        <%= t.label :apy%>
        <%= t.number_field :apy, step: :any, required: true, min: 0, class:'form-control' %>
    </div>
    <%= link_to "Remove", 'javascript:void(0)', class: "remove_fields btn btn-danger mt-3" %>
</div>