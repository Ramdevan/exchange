<table class='table table-condensed table-hover'>
<tr>
    <th>Id</th>
    <th>Credited Amount</th>
    <th>Apy</th>
    <th>Credited Time</th>
</tr>
<%page = (1 if params[:page].nil?) || params[:page].to_i%>
<% @member_stake_coin_credit_history.each_with_index do |credit_history, index|%>
    <tr>
        <td><%= ((page - 1) * 10) + index + 1 %></td>
        <td><%= credit_history.credit_amount %></td>
        <td><%=credit_history.credit_percent %></td>
        <td><%= credit_history.created_at%></td>
            
    </tr>
<% end %>
<%= paginate @member_stake_coin_credit_history%>
</table>

